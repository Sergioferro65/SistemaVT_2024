@model IEnumerable<BugsMVC.Models.Operador>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home", new { controller = "Home" })"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="active">Operadores</li>
    </ol>
</div>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Operadores</h1>
        <p>
            @Html.ActionLink("Nuevo Operador", "Create")
        </p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Datos de Operadores</div>
            <div class="panel-body">
                <table id="myTable" class="table table-striped table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Numero)
                            </th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Numero)
                                </td>

                                <td align="center" class="col-md-3">
                                    <a class="btn btn-info btn-xs" href="@Url.Action("Details", "Operadores", new { controller = "Operador", id = item.OperadorID })">
                                        <i class="fa fa-search fa-lg"></i> Detalles
                                    </a>
                                    <a class="btn btn-primary btn-xs" href="@Url.Action("Edit", "Operadores", new { controller = "Operador", id = item.OperadorID })">
                                        <i class="fa fa-pencil-square-o fa-lg"></i> Editar
                                    </a>
                                    <a class="btn btn-danger btn-xs" href="@Url.Action("Delete", "Operadores", new { controller = "Operador", id = item.OperadorID })">
                                        <i class="fa fa-trash-o fa-lg"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#myTable').dataTable();
    });
</script>

