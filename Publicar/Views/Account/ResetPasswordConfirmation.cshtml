@{
    ViewBag.Title = "Confimación de cambio de Contraseña";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center" style="background-color: #23b7e5;">
            <a href="#">
                <img src="~/Content/Images/logoBugs-login.png" alt="Bugs" class="block-center img-rounded" width="280" />
            </a>
        </div>
        <div class="panel-body">
            <p class="text-center pv">@ViewBag.Title.</p>
            <hr />
            <p style="text-align:center">
                Su contraseña ha sido cambiada. <br />
                Por favor @Html.ActionLink("haga clic para ingresar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </p>
        </div>
    </div>
    <!-- END panel-->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


