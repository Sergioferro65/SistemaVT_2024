@model BugsMVC.Models.UsuarioViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using BugsMVC.Models
@using BugsMVC.DAL
@using BugsMVC.Helpers

<h3>
    Detalles
    <small>Detalles del usuario seleccionado.</small>
</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <h4>Datos generales</h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ApplicationUser.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ApplicationUser.Email)
            </dd>
            <dt>
                Roles
            </dt>
            <dd>
                @if (Model.RolesSeleccionados != null)
                {
                    for (int i = 0; i < Model.RolesSeleccionados.Length; i++)
                    {
                        if (i > 0) { WriteLiteral(", "); }
                        @Model.RolesSeleccionados[i]
                    }
                }
            </dd>
        </dl>

       
    </div>
</div>

<p>
@if (SecurityHelper.IsAllowed((int)Permissions.UsuarioWeb.Update))
{
    @Html.ActionLink("Editar", "Edit", "UsuarioWeb", new { id = Model.UsuarioID }, new { @class = "btn btn-default" })
}
    @Html.ActionLink("Volver", "Index", "UsuarioWeb", null, new { @class = "btn btn-default" })
</p>
