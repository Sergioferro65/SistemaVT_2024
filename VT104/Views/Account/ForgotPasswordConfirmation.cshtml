@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@{
    ViewBag.Title = "Confirmación de cambio de contraseña";
}

<div class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center" style="background-color: #23b7e5;">
            <a href="#">
                <img src="~/Content/Images/logoBugs-login.png" alt="Bugs" class="block-center img-rounded" width="280" />
            </a>
        </div>
        <div class="panel-body">
            <p class="text-center pv">Por favor, revise su mail para cambiar la contraseña.</p>
            <button type="button" class="btn btn-default btn-block" onclick="location='@Url.Action("Login", "Account")'">Volver</button>
        </div>
    </div>
    <!-- END panel-->
</div>

