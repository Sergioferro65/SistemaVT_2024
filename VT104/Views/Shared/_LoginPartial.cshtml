@using Microsoft.AspNet.Identity
@using BugsMVC

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", style = "margin-top: 5px;" }))
    {
        @Html.AntiForgeryToken()        
        <li class="display-none">
            @Html.ActionLink("Hola " + ViewHelper.GetCurrentUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "color: white" })
        </li>
        <li class="display-none">
            <a href="javascript:document.getElementById('logoutForm').submit()" style="color: white">
                Salir <span class="fa fa-sign-out" style="color: white"></span>
            </a>
        </li>
    }
}
