@using (Html.BeginForm( "Configure", "MercadoPago", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", @id = "idForm" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => Model.ClientId, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.ClientId, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => Model.SecretToken, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.SecretToken, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10"> 
            <input type="submit" class="btn btn-default" value="Actualizar"/>
        </div>
    </div>

