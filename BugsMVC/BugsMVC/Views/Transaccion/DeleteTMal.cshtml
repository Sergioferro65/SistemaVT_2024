@model BugsMVC.Models.TransaccionesMal

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>
    Eliminar
    <small>Eliminar la transacción seleccionada.</small>
</h3>

<div class="panel panel-default">
    <div class="panel-heading">¿Estás seguro de querer eliminar esta transacción?</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Id de Transaccion: ")

            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdTransaccionMal)
            </dd>


            <dt>
                @Html.DisplayName("Datos de la terminal:  ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Terminal)
            </dd>

            <dt>
                @Html.DisplayName("Campo transacción:  ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Transaccion)
            </dd>

            <dt>
                @Html.DisplayName("Motivo:  ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Motivo)
            </dd>

            <dt>
                @Html.DisplayName("Fecha de descarga: ")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaDescarga)
            </dd>

        </dl>

    </div>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "confirmationForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-default">Eliminar</button>
        @Html.ActionLink("Volver", "IndexMal", "Transaccion", null, new { @class = "btn btn-default" })
    </div>
}


@section BodyArea {
    <div id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content confirm1">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 id="myModalLabel" class="modal-title">Eliminar</h4>
                </div>
                <div class="modal-body">¿ Desea Ud. eliminar la Transacción seleccionada ?</div>
                <div class="modal-footer">
                    <button type="button" onclick="$('#myModal .modal-content.confirm1').hide(); $('#myModal .modal-content.confirm2').show(); return false;" class="btn btn-primary">Confirmar</button>
                    @Html.ActionLink("Volver", "IndexMal", "Transaccion", null, new { @class = "btn btn-default" })
                </div>
            </div>
            <div class="modal-content confirm2" style="display:none;">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 id="myModalLabel" class="modal-title">Alerta</h4>
                </div>
                <div class="modal-body">
                    Los datos serán borrados permantentemente y no podrán ser recuperados.
                    <br />Si usted está seguro presione el botón 'Eliminar'.
                </div>
                <div class="modal-footer">
                    <button onclick="$('#confirmationForm').submit();" type="button" class="btn btn-primary">Eliminar</button>
                    @Html.ActionLink("Volver", "IndexMal", "Transaccion", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}