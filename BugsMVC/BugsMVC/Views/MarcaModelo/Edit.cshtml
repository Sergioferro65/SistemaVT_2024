@model BugsMVC.Models.MarcaModelo

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>
    Editar
    <small>Editar un Modelo de Máquina.</small>
</h3>

<div class="panel panel-default">
    @using (Html.BeginForm("Edit", "MarcaModelo", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MarcaModeloID)

            <fieldset>
                <div class="form-group">
                    @Html.LabelFor(model => model.MarcaModeloNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.MarcaModeloNombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MarcaModeloNombre, "", new { @class = "text-danger" })
                    </div>
                </div>
            </fieldset>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Volver", "Index", "MarcaModelo", null, new { @class = "btn btn-default" })
</div>