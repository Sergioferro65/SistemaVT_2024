@model BugsMVC.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidaste tu Contraseña?";
}

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center" style="background-color: #23b7e5;">
            <a href="#">
                <img src="~/Content/Images/logoBugs-login.png" alt="Bugs" class="block-center img-rounded" width="280" />
            </a>
        </div>
        <div class="panel-body">
            <p class="text-center pv">Cambio de Contraseña</p>
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <p class="text-center">Ingrese su mail para recibir instrucciones para cambiar la contraseña.</p>
                <div class="form-group has-feedback">
                    <label for="resetInputEmail1" class="text-muted">Mail</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type="email", @placeholder="Ingrese su mail", @autocomplete="off"})
                    <span class="fa fa-envelope form-control-feedback text-muted"></span>
                </div>
                <button type="submit" class="btn btn-danger btn-block">Enviar mail</button>
                <button type="button" class="btn btn-default btn-block" onclick="location='@Url.Action("Login", "Account")'">Volver</button>
            }
        </div>
    </div>
    <!-- END panel-->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}